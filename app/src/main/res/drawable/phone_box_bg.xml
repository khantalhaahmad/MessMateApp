<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ================= FOCUSED ================= -->
    <item android:state_focused="true">

        <shape>

            <!-- Light red background -->
            <solid android:color="#FFF5F5"/>

            <corners
                android:radius="14dp"/>

            <stroke
                android:width="2dp"
                android:color="#E23744"/>

        </shape>

    </item>


    <!-- ================= PRESSED ================= -->
    <item android:state_pressed="true">

        <shape>

            <solid android:color="#FFF5F5"/>

            <corners
                android:radius="14dp"/>

            <stroke
                android:width="2dp"
                android:color="#E23744"/>

        </shape>

    </item>


    <!-- ================= DEFAULT ================= -->
    <item>

        <shape>

            <!-- Soft grey background -->
            <solid android:color="#F9FAFB"/>

            <corners
                android:radius="14dp"/>

            <stroke
                android:width="1dp"
                android:color="#E5E7EB"/>

        </shape>

    </item>

</selector>
