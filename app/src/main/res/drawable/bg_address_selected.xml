<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background -->
    <solid android:color="#E8F5E9"/> <!-- Light Green -->

    <!-- Border -->
    <stroke
        android:width="1.5dp"
        android:color="#2E7D32"/> <!-- Dark Green -->

    <!-- Rounded Corners -->
    <corners android:radius="12dp"/>

    <!-- Padding -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp"/>

</shape>
