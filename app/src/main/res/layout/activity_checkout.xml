<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- ================= SCROLL ================= -->

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollCart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomButtonContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <!-- MAIN CONTAINER -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <!-- ================= HEADER ================= -->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">


                        <TextView
                            android:id="@+id/tvMessName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#111827"/>


                        <TextView
                            android:id="@+id/tvDeliveryTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40-45 mins to Home"
                            android:textSize="14sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="4dp"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="10dp"
                            android:background="#E5E7EB"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- ================= CART ================= -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Cart"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:layout_marginBottom="10dp"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvCart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"/>


                        <LinearLayout
                            android:id="@+id/layoutAddMore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true">


                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_plus"
                                android:tint="#E23744"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add more items"
                                android:textColor="#E23744"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp"/>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- ================= RECOMMEND ================= -->

                <TextView
                    android:id="@+id/tvRecommendTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete your meal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecommend"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:nestedScrollingEnabled="false"/>



                <!-- ================= BILL ================= -->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTotalBill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="4dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bill Details"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp"/>


                        <include layout="@layout/item_bill_delivery"/>

                        <include layout="@layout/item_bill_address"/>

                        <include layout="@layout/item_bill_phone"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="10dp"
                            android:background="#E5E7EB"/>


                        <include layout="@layout/item_bill_total"/>


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="90dp"/>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <!-- ================= BOTTOM BUTTON AREA ================= -->

        <LinearLayout
            android:id="@+id/bottomButtonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <!-- SELECT ADDRESS (ZOMATO STYLE) -->

            <Button
                android:id="@+id/btnSelectAddress"
                android:layout_width="match_parent"
                android:layout_height="54dp"

                android:text="Select address at next step â†’"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"

                android:backgroundTint="#E23744"
                android:textColor="@android:color/white"

                android:elevation="6dp"
                android:stateListAnimator="@null"

                android:visibility="gone"/>


            <!-- PLACE ORDER -->

            <!-- PLACE ORDER + CHANGE PAYMENT -->

            <LinearLayout
                android:id="@+id/layoutPaymentAction"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:backgroundTint="#E23744"
                android:background="@drawable/red_button"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!-- Place Order Button -->

                <Button
                    android:id="@+id/btnSelectPayment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:text="Select Payment Method"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"

                    android:elevation="0dp"
                    android:stateListAnimator="@null"/>


                <!-- Change Icon -->

                <ImageView
                    android:id="@+id/btnChangePayment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:src="@drawable/ic_edit"
                    android:tint="@android:color/white"
                    android:padding="2dp"/>

            </LinearLayout>




        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
