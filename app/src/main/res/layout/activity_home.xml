<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <!-- ================= TOP BAR ================= -->

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- LOCATION -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivering to"
                android:textSize="12sp"
                android:textColor="@color/textSecondary"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostel / PG"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textPrimary"/>
        </LinearLayout>


        <!-- PROFILE -->

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_profile"
            android:background="@drawable/circle_gray"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>


    <!-- ================= CONTENT ================= -->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/layoutResumeCart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- ================= SEARCH ================= -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- ðŸ” Search Icon -->
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_search"
                        android:tint="@color/textSecondary"
                        android:padding="2dp" />


                    <!-- Search Area -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">


                        <!-- Prefix -->
                        <TextView
                            android:id="@+id/tvSearchPrefix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Search for "
                            android:textSize="16sp"
                            android:textColor="@color/textSecondary" />


                        <!-- Animated Hint -->
                        <TextSwitcher
                            android:id="@+id/tsSearchHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inAnimation="@anim/slide_in_bottom"
                            android:outAnimation="@anim/slide_out_top" />


                        <!-- Input -->
                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint=""
                            android:padding="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/textPrimary"
                            android:singleLine="true"
                            android:imeOptions="actionSearch"
                            android:inputType="text" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- TITLE -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's on your mind?"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>


            <!-- CATEGORIES -->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategories"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingStart="16dp"
                android:clipToPadding="false"/>


            <!-- RESULTS -->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRestaurants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>


                <!-- EMPTY -->

                <LinearLayout
                    android:id="@+id/layoutEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/ic_empty_state"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No results found"
                        android:textSize="18sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Try searching something else"
                        android:textColor="@color/textSecondary"/>


                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <!-- ================= RESUME CART BAR ================= -->

    <LinearLayout
        android:id="@+id/layoutResumeCart"
        android:elevation="1dp"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/primary"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/tvResumeCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3 items in cart"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/btnResumeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="8dp"/>


        <ImageView
            android:id="@+id/btnResumeClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close_white"
            android:padding="4dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/btnAllCarts"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@drawable/bg_all_carts"
        android:text="All Carts (2)"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:visibility="gone"

        android:elevation="80dp"
        android:translationZ="80dp"
        android:layout_marginBottom="12dp"
        android:translationY="-70dp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutResumeCart"/>

    <!-- ================= POPUP OVERLAY LAYER ================= -->

    <FrameLayout
        android:id="@+id/popupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom"
        android:elevation="30dp"
        android:translationZ="30dp"

        android:clickable="false"
        android:focusable="false"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>
