<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">


    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Receiver Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#111827"
        android:layout_marginBottom="8dp"/>


    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="These details will be shared with delivery partner"
        android:textSize="13sp"
        android:textColor="#6B7280"
        android:layout_marginBottom="16dp"/>


    <!-- Name -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Receiver name"
        android:padding="12dp"
        android:background="@drawable/phone_box_bg"
        android:layout_marginBottom="12dp"
        android:inputType="textPersonName"/>


    <!-- Phone -->
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Mobile number"
        android:padding="12dp"
        android:background="@drawable/phone_box_bg"
        android:layout_marginBottom="20dp"
        android:inputType="phone"
        android:maxLength="10"/>


    <!-- Save Button -->
    <Button
        android:id="@+id/btnSavePhone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Save Details"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#E23744"/>

</LinearLayout>
