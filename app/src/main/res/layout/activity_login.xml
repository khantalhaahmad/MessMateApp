<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <!-- ================= TOP BANNER ================= -->

    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_banner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- ================= LOGIN CARD ================= -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/imgBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">


            <!-- ================= HEADING ================= -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="India’s #1 Mess Food\nDelivery App"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>


            <!-- ================= LOGIN / SIGN UP ================= -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E5E7EB"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log in or sign up"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#6B7280"
                    android:padding="10dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E5E7EB"/>
            </LinearLayout>


            <!-- ================= SAVED ACCOUNT ================= -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSavedUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="14dp">


                    <!-- Avatar -->

                    <TextView
                        android:id="@+id/tvAvatar"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/bg_circle"
                        android:text="T"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"/>


                    <!-- User Info -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Talha"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#111827"/>

                        <TextView
                            android:id="@+id/tvUserMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8XXXX5503"
                            android:textSize="13sp"
                            android:textColor="#6B7280"/>

                    </LinearLayout>


                    <!-- Loader -->

                    <ProgressBar
                        android:id="@+id/savedLoader"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:visibility="gone"
                        android:indeterminate="true"
                        android:indeterminateTint="#E53935"/>


                    <!-- More -->

                    <ImageView
                        android:id="@+id/btnMore"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_more_vert"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <!-- ================= NORMAL LOGIN ================= -->

            <LinearLayout
                android:id="@+id/layoutNormalLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- ================= PHONE ROW ================= -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                    <!-- Country -->

                    <LinearLayout
                        android:layout_width="84dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_input_box"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#374151"/>
                    </LinearLayout>


                    <!-- Input -->

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="#E5E7EB"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter your mobile number"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:digits="0123456789"
                            android:textSize="15sp"
                            android:textColor="#111827"/>


                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>



                <!-- ================= CONTINUE BUTTON ================= -->

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp">


                    <Button
                        android:id="@+id/btnSendOtp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Continue"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#E53935"/>


                    <ProgressBar
                        android:id="@+id/btnLoader"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:indeterminate="true"
                        android:indeterminateTint="@android:color/white"/>

                </FrameLayout>



                <!-- ================= OR ================= -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E5E7EB"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#9CA3AF"
                        android:padding="10dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E5E7EB"/>
                </LinearLayout>



                <!-- ================= SOCIAL ================= -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_google"
                        android:layout_margin="12dp"/>

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_facebook"
                        android:layout_margin="12dp"/>

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_gmail"
                        android:layout_margin="12dp"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <!-- ================= TERMS ================= -->

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="By continuing, you agree to our\nTerms of Service • Privacy Policy • Content Policies"
        android:textSize="12sp"
        android:textColor="#777777"
        android:gravity="center"
        android:layout_margin="18dp"
        app:layout_constraintTop_toBottomOf="@id/cardLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
