<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- ============================= -->
    <!-- ðŸ“ž Phone Prefix -->
    <!-- ============================= -->
    <style name="PhonePrefixStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <!-- ============================= -->
    <!-- ðŸ”¥ OTP BOX (ZOMATO STYLE) -->
    <!-- ============================= -->
    <style name="OtpBox">

        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">6dp</item>

        <item name="android:background">@drawable/bg_otp_box</item>
        <item name="android:gravity">center</item>

        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#111827</item>

        <!-- Remove underline -->
        <item name="android:backgroundTint">@null</item>
        <item name="android:cursorVisible">false</item>

    </style>


    <!-- ============================= -->
    <!-- ðŸŸ¢ PRIMARY BUTTON -->
    <!-- ============================= -->
    <style name="PrimaryButtonStyle">

        <item name="android:layout_height">54dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-medium</item>

        <item name="android:backgroundTint">#22C55E</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>

    </style>


    <!-- ============================= -->
    <!-- ðŸ”½ BOTTOM SHEET (ZOMATO LOOK) -->
    <!-- ============================= -->

    <style name="BottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">
            @style/CustomBottomSheetStyle
        </item>

        <item name="android:windowTranslucentStatus">true</item>

    </style>


    <style name="CustomBottomSheetStyle"
        parent="Widget.Design.BottomSheet.Modal">

        <item name="android:background">
            @drawable/bg_bottomsheet
        </item>

        <item name="android:elevation">10dp</item>

    </style>


    <!-- ============================= -->
    <!-- ðŸ©¶ SUBTLE TEXT -->
    <!-- ============================= -->
    <style name="SubtleTextStyle">

        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#9CA3AF</item>
        <item name="android:fontFamily">sans-serif</item>

    </style>


    <!-- ============================= -->
    <!-- ðŸŸ¡ FILTER CHIP (MENU PAGE) -->
    <!-- ============================= -->
    <style name="FilterChip">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>

        <item name="android:layout_marginEnd">8dp</item>

        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>

        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>

        <item name="android:background">@drawable/bg_chip</item>

    </style>


    <!-- ============================= -->
    <!-- ðŸ” SEARCH BOX (MENU PAGE) -->
    <!-- ============================= -->
    <style name="SearchBoxStyle">

        <item name="android:layout_height">42dp</item>

        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>

        <item name="android:textSize">14sp</item>

        <item name="android:background">@drawable/bg_search</item>

    </style>


    <style name="ProfileInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
